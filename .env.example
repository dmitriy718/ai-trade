# ============================================
# AI Trading Bot - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ---- Kraken API ----
KRAKEN_SANDBOX=true
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# ---- Trading Mode ----
# Options: paper, live
TRADING_MODE=paper

# ---- Exchange Selection ----
# Options: kraken, coinbase
ACTIVE_EXCHANGE=kraken
EXCHANGE_REST_URL=
EXCHANGE_WS_URL=
EXCHANGE_MAKER_FEE=
EXCHANGE_TAKER_FEE=
EXCHANGE_POST_ONLY=false
CANDLE_POLL_SECONDS=60

# ---- Risk Parameters ----
MAX_RISK_PER_TRADE=0.02
MAX_DAILY_LOSS=0.05
MAX_POSITION_USD=500.0
INITIAL_BANKROLL=10000.0

# ---- Telegram Bot (Optional) ----
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_CHAT_IDS=
TELEGRAM_POLLING_ENABLED=true

# ---- Coinbase Advanced Trade (Optional) ----
COINBASE_SANDBOX=true
COINBASE_ORG_ID=
COINBASE_KEY_ID=
COINBASE_KEY_NAME=
COINBASE_PRIVATE_KEY_PATH=
COINBASE_MARKET_DATA_URL=

# ---- Dashboard ----
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8080
DASHBOARD_SECRET_KEY=

# ---- Billing (Stripe) - optional for SaaS / licensing ----
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID=

# ---- Encryption ----
VAULT_PASSWORD=

# ---- Logging ----
LOG_LEVEL=INFO

# ---- Model ----
MODEL_RETRAIN_INTERVAL_HOURS=168
MIN_TRAINING_SAMPLES=10000

# ---- Database ----
DB_PATH=data/trading.db
