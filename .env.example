# ============================================
# AI Trading Bot - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ---- Kraken API ----
KRAKEN_SANDBOX=true
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# ---- Trading Mode ----
# Options: paper, live
TRADING_MODE=paper

# ---- Risk Parameters ----
MAX_RISK_PER_TRADE=0.02
MAX_DAILY_LOSS=0.05
MAX_POSITION_USD=500.0
INITIAL_BANKROLL=10000.0

# ---- Telegram Bot (Optional) ----
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ---- Dashboard ----
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8080
DASHBOARD_SECRET_KEY=

# ---- Billing (Stripe) - optional for SaaS / licensing ----
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID=

# ---- Encryption ----
VAULT_PASSWORD=

# ---- Logging ----
LOG_LEVEL=INFO

# ---- Model ----
MODEL_RETRAIN_INTERVAL_HOURS=168
MIN_TRAINING_SAMPLES=10000

# ---- Database ----
DB_PATH=data/trading.db
